{% extends '@OctopouceAdmin/layout.html.twig' %}

{% form_theme form '@OctopouceAdmin/Form/layout.html.twig' %}

{% block title %}Nouvelle commande de {{ order.user.firstname }} {{ order.user.lastname }} - {{ parent() }}{% endblock %}

{% block main %}
    <div class="padding-filter">
        <div class="row title">
            <div class="col s12">
                <h1>Nouvelle commande de {{ order.user.firstname }} {{ order.user.lastname }}</h1>
            </div>
        </div>
        {{ form_start(form) }}
        <div class="row">
            <div class="col s12 right-align">
                {{ form_widget(form.submit) }}
            </div>
            <div class="col s7">
                <div class="box">
                    <div class="title">
                        Ã‰tat de la commande {{ order.number }}
                    </div>
                    <div class="content">
                        {{ form_widget(form.state) }}
                    </div>
                </div>
                <div class="box">
                    <div class="title">
                        Reprendre une commande ou un panier
                    </div>
                    <div class="content">
                        {{ include('admin/order/new/cart.html.twig') }}
                    </div>
                </div>
                <div class="box">
                    <div class="title">
                        Promotion
                    </div>
                    <div class="content">
                        {{ form_widget(form.discount) }}
                    </div>
                </div>
            </div>
            <div class="col s5">
                <div class="box">
                    <div class="title">
                        Client {{ order.user.firstname }} {{ order.user.lastname }} - #{{ order.user.id }}
                    </div>
                    <div class="content">
                        {{ include('admin/order/new/client.html.twig') }}
                    </div>
                </div>
            </div>

        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
